<h1>New game</h1>
<div class="flex-container">
<% @letters.each do |letter| %>
  <div><%= letter %></div>
<% end %>
</div>

<form action="/score" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">What is the longest word you can find</label>
    <input type="text" class="form-control" name="word" id="examplequestions" aria-describedby="questions" placeholder="Enter your word">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </div>
  <button type="submit" class="btn btn-primary" value="Ask!">Submit</button>
</form>
